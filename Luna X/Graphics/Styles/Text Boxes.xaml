<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Dark.xaml" />
        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
        <ResourceDictionary Source="/Graphics/Styles/Colors.xaml" />
    </ResourceDictionary.MergedDictionaries>
    <!--#region Placeholder Textbox-->
    <Style x:Key="placeHolder"
           BasedOn="{StaticResource {x:Type TextBox}}"
           TargetType="{x:Type TextBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Grid>
                        <Label Content="{TemplateBinding TextSearch.Text}"
                               FontFamily="/Graphics/Fonts/Icon/#Material Icons Round"
                               FontSize="17"
                               VerticalAlignment="Center"
                               Width="30"
                               HorizontalAlignment="Left"
                               Height="30"
                               VerticalContentAlignment="Bottom"
                               HorizontalContentAlignment="Right"
                               Foreground="White"/>
                        <Grid Margin="{TemplateBinding Padding}">
                            <TextBox x:Name="textSource"
                                 HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                 VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                     Panel.ZIndex="2"
                                     VerticalAlignment="Stretch"
                                     materialDesign:TextFieldAssist.IncludeSpellingSuggestions="True"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="White"
                                     Text="{Binding Text, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}">

                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}" />
                                </TextBox.Resources>
                            </TextBox>
                            <TextBox 
                                 HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                 VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                     VerticalAlignment="Stretch"
                                     Background="{TemplateBinding Background}"
                                     materialDesign:TextFieldAssist.IncludeSpellingSuggestions="True"
                                     BorderThickness="0"
                                     Text="{TemplateBinding Tag}">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}" />
                                </TextBox.Resources>
                                <TextBox.Style>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="Foreground" Value="Transparent" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, Source={x:Reference textSource}}" Value="">
                                                <Setter Property="Foreground" Value="#FFA3A3A3" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="placeHolderNoUnderline"
       BasedOn="{StaticResource {x:Type TextBox}}"
       TargetType="{x:Type TextBox}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Grid>
                        <Label Content="{TemplateBinding TextSearch.Text}"
                           FontFamily="/Graphics/Fonts/Icon/#Material Icons Round"
                           FontSize="17"
                           VerticalAlignment="Center"
                           Width="30"
                           HorizontalAlignment="Left"
                           Height="30"
                           VerticalContentAlignment="Bottom"
                           HorizontalContentAlignment="Right"
                           Foreground="White"/>
                        <Grid Margin="{TemplateBinding Padding}">
                            <TextBox x:Name="textSource"
                                 HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                 VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                 Panel.ZIndex="2"
                                 materialDesign:TextFieldAssist.IncludeSpellingSuggestions="True"
                                     materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                                 Background="Transparent"
                                 BorderThickness="0"
                                 Foreground="White"
                                 Text="{Binding Text, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}, UpdateSourceTrigger=PropertyChanged}">

                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}" />
                                </TextBox.Resources>
                            </TextBox>
                            <TextBox 
                                 HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                 VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                 Background="{TemplateBinding Background}"
                                 materialDesign:TextFieldAssist.IncludeSpellingSuggestions="True"
                                 materialDesign:TextFieldAssist.UnderlineBrush="Transparent"
                                 BorderThickness="0"
                                 Text="{TemplateBinding Tag}">
                                <TextBox.Resources>
                                    <Style TargetType="{x:Type Border}" />
                                </TextBox.Resources>
                                <TextBox.Style>
                                    <Style TargetType="{x:Type TextBox}">
                                        <Setter Property="Foreground" Value="Transparent" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, Source={x:Reference textSource}}" Value="">
                                                <Setter Property="Foreground" Value="#FFA3A3A3" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                        </Grid>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->
</ResourceDictionary>