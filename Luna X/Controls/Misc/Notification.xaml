<UserControl x:Class="Luna_X.Controls.Misc.notification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Luna_X.Controls.Misc"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Height="70">
    <Grid x:Name="mainGrid">
        <Border x:Name="Main"
                Height="65"
                Width="0"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="20"
                MaxWidth="400"
                CornerRadius="8"
                Background="#161517" 
                BorderBrush="#AF41434A"
                BorderThickness="1.2">
            <Grid>
                <TextBlock x:Name="header"
                               Foreground="White"
                               FontFamily="/Luna X;component/Graphics/Fonts/#Poppins Medium"
                               FontSize="14.2"
                               VerticalAlignment="Top"
                               Text="Dialog Header Example" 
                               TextOptions.TextRenderingMode="Aliased"
                               TextOptions.TextFormattingMode="Ideal"
                               Margin="12 10.5"/>
                <TextBlock x:Name="content" Margin="12 32 12 9"
                                   Foreground="#A0FFFFFF"
                                   TextOptions.TextRenderingMode="Aliased"
                                   TextOptions.TextFormattingMode="Ideal"
                                   FontFamily="/Luna X;component/Graphics/Fonts/#Poppins"
                                   FontSize="12.5"
                               VerticalAlignment="Center"
                           Text="This Is A Notification"
                                   TextWrapping="Wrap" Height="30.6"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
