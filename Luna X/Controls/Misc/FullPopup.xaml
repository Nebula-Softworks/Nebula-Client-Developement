<UserControl x:Class="Luna_X.Controls.Misc.FullPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Luna_X.Controls.Misc"
             xmlns:fluent="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
             mc:Ignorable="d" 
             xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
             UseLayoutRounding="True"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#79202020"
          MouseDown="Grid_MouseDown">

        <Border x:Name="Main"
                Margin="50"
                CornerRadius="12"
                Background="#226A6A6A" 
                BorderBrush="#FF3E4142"
                BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect ShadowDepth="0"
                              x:Name="Shadow"
                              Color="#EE171717"
                              BlurRadius="10"
                              Opacity="0.6"/>
            </Border.Effect>

            <fluent:AcrylicPanel NoiseOpacity="0.006" 
                             TintOpacity="0.3"
                             TintColor="#0D283231">

               

            </fluent:AcrylicPanel>

        </Border>

    </Grid>
</UserControl>
